{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "public": true,
  "rewrites": [
    {
      "source": "/((?!images/).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "dist/assets/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Content-Type",
          "value": "image/png"
        }
      ]
    }
  ]
}
